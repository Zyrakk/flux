# =============================================================================
# Flux â€” Environment Variables
# Copy to .env and fill in your values
# =============================================================================

# --- Database (PostgreSQL + pgvector) ---
DATABASE_URL=postgres://flux:flux@localhost:5432/flux?sslmode=disable

# --- Message Queue (NATS JetStream) ---
NATS_URL=nats://localhost:4222

# --- Cache (Redis / Valkey) ---
REDIS_URL=redis://localhost:6379/0

# --- LLM Provider ---
# provider: glm | openai_compat | anthropic
LLM_PROVIDER=glm
LLM_ENDPOINT=https://open.bigmodel.cn/api/paas/v4
LLM_MODEL=glm-4.7
LLM_API_KEY=your-api-key-here

# --- API Server ---
API_PORT=8080
LOG_LEVEL=info

# --- Rate Limits (comma-separated domain=rate) ---
RATE_LIMITS=reddit.com=60/min,hn.algolia.com=30/min,api.github.com=83/min,default=10/min

# --- User Agent for outbound requests ---
USER_AGENT=Flux/1.0 (+https://github.com/zyrak/flux)

# --- Reddit OAuth (Phase 4) ---
# REDDIT_CLIENT_ID=
# REDDIT_CLIENT_SECRET=

# --- GitHub Token (Phase 4) ---
# GITHUB_TOKEN=
