FROM golang:1.23-alpine AS builder

RUN apk add --no-cache git ca-certificates tzdata

WORKDIR /build

COPY go.mod go.sum ./
RUN go mod download

COPY . .

RUN CGO_ENABLED=0 GOOS=linux go build -ldflags="-w -s" -o /flux-briefing-gen ./cmd/briefing-gen/

# ---

FROM alpine:3.20

RUN apk add --no-cache ca-certificates tzdata && \
    adduser -D -h /app flux

COPY --from=builder /flux-briefing-gen /usr/local/bin/flux-briefing-gen

USER flux
WORKDIR /app

ENTRYPOINT ["flux-briefing-gen"]
